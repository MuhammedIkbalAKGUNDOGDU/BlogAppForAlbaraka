<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogApp.styles.css" asp-append-version="true" />
    <style>
        .navbar {
            z-index: 1050;
        }
        .navbar-nav .dropdown-menu {
            z-index: 9999 !important;
        }
        .nav-item.dropdown {
            position: relative;
            z-index: 9999;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BlogApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav" id="authNav">
                        <!-- Dinamik olarak doldurulacak -->
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BlogApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Token ve kullanıcı kontrolü
        function updateAuthNav() {
            const authNav = document.getElementById('authNav');
            const token = localStorage.getItem('token');
            const userStr = localStorage.getItem('user');
            
            if (token && userStr) {
                try {
                    const user = JSON.parse(userStr);
                    authNav.innerHTML = `
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                ${user.firstName || user.FirstName || ''} ${user.lastName || user.LastName || ''}
                            </a>
                             <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
            <li><a class="dropdown-item" href="/Profile/Index">Profilim</a></li>

            <li><a class="dropdown-item" href="/BlogPost/Create">Blog Yaz</a></li>

            <li><a class="dropdown-item" href="/BlogPost/MyPosts">Yazılarım</a></li>

            <li><hr class="dropdown-divider"></li>

            <li><a class="dropdown-item text-danger" href="#" onclick="logout()">Çıkış Yap</a></li>
        </ul>
                           

                        </li>
                    `;
                } catch (e) {
                    // JSON parse hatası durumunda
                    authNav.innerHTML = `
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#" onclick="logout()">Çıkış Yap</a>
                        </li>
                    `;
                }
            } else {
                authNav.innerHTML = `
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/AuthView/Login">Giriş Yap</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/AuthView/Register">Kayıt Ol</a>
                    </li>
                `;
            }
        }

        // Çıkış yap fonksiyonu
        function logout() {
            localStorage.removeItem('token');
            localStorage.removeItem('user');
            window.location.href = '/AuthView/Login';
        }

        // Sayfa yüklendiğinde header'ı güncelle
        document.addEventListener('DOMContentLoaded', function() {
            updateAuthNav();
        });

        // Storage değişikliklerini dinle (diğer tab'lardan giriş/çıkış yapıldığında)
        window.addEventListener('storage', function(e) {
            if (e.key === 'token' || e.key === 'user') {
                updateAuthNav();
            }
        });

        // Auth state değişikliklerini dinle (aynı sayfada giriş/çıkış yapıldığında)
        window.addEventListener('authStateChanged', function() {
            updateAuthNav();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
