@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow">
            <div class="card-body p-5">
                <h2 class="card-title text-center mb-4">Giriş Yap</h2>
                
                <div id="alertContainer"></div>

                <form id="loginForm" novalidate>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" required />
                        <div class="invalid-feedback">
                            Lütfen geçerli bir email adresi giriniz.
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label">Şifre</label>
                        <input type="password" class="form-control" id="password" required />
                        <div class="invalid-feedback">
                            Lütfen şifrenizi giriniz.
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3">
                        <span id="loginSpinner" class="spinner-border spinner-border-sm d-none me-2" role="status" aria-hidden="true"></span>
                        Giriş Yap
                    </button>
                </form>

                <div class="text-center">
                    <p class="mb-0">Hesabınız yok mu? <a href="/AuthView/Register">Kayıt Ol</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById("loginForm").addEventListener("submit", async function (e) {
    e.preventDefault();
    
    const form = this;
    const alertContainer = document.getElementById("alertContainer");
    const loginSpinner = document.getElementById("loginSpinner");
    const submitButton = form.querySelector('button[type="submit"]');
    
    // Form validation
    if (!form.checkValidity()) {
        form.classList.add('was-validated');
        return;
    }

    // Clear previous alerts
    alertContainer.innerHTML = '';
    
    // Show loading state
    loginSpinner.classList.remove('d-none');
    submitButton.disabled = true;

    const payload = {
        email: document.getElementById("email").value,
        password: document.getElementById("password").value
    };

    try {
        const res = await fetch("/api/auth/login", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(payload)
        });

        const txt = await res.text();

        if (res.ok) {
            try {
                const data = JSON.parse(txt);
                // Token'ı localStorage'a kaydet
                if (data.token) {
                    localStorage.setItem('token', data.token);
                    localStorage.setItem('user', JSON.stringify(data.user));
                }
                
                // Başarı mesajı
                alertContainer.innerHTML = `
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Başarılı!</strong> Giriş yapıldı. Yönlendiriliyorsunuz...
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                `;
                
                setTimeout(() => {
                    window.location.href = '/';
                }, 1500);
            } catch (e) {
                showError(alertContainer, 'Giriş başarılı ancak yanıt işlenemedi.');
            }
        } else {
            try {
                const json = JSON.parse(txt);
                showError(alertContainer, json.message || 'Giriş başarısız.');
            } catch {
                showError(alertContainer, txt || 'Giriş başarısız. Lütfen tekrar deneyin.');
            }
        }
    } catch (error) {
        showError(alertContainer, 'Bir hata oluştu. Lütfen tekrar deneyin.');
    } finally {
        loginSpinner.classList.add('d-none');
        submitButton.disabled = false;
    }
});

function showError(container, message) {
    container.innerHTML = `
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Hata!</strong> ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    `;
}
</script>
