@{
    ViewData["Title"] = "Yeni Blog Yazısı";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-7">
        <div class="card shadow">
            <div class="card-body p-4">
                <h2 class="card-title mb-4">Yeni Blog Yazısı Oluştur</h2>
                
                <div id="alertContainer"></div>

                <form id="createPostForm" novalidate>
                    <div class="mb-3">
                        <label for="categoryId" class="form-label">Kategori <span class="text-danger">*</span></label>
                        <select class="form-select" id="categoryId" required>
                            <option value="">Kategori seçiniz...</option>
                        </select>
                        <div class="invalid-feedback">
                            Lütfen bir kategori seçiniz.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="title" class="form-label">Başlık <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="title" required />
                        <div class="invalid-feedback">
                            Lütfen başlık giriniz.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="content" class="form-label">İçerik <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="content" rows="10" required></textarea>
                        <div class="invalid-feedback">
                            Lütfen içerik giriniz.
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Kapak Resmi (Opsiyonel)</label>
                        
                        <!-- URL veya Dosya Seçimi -->
                        <div class="btn-group mb-2" role="group">
                            <input type="radio" class="btn-check" name="coverImageType" id="coverImageUrl" value="url" checked>
                            <label class="btn btn-outline-primary" for="coverImageUrl">URL</label>
                            
                            <input type="radio" class="btn-check" name="coverImageType" id="coverImageFile" value="file">
                            <label class="btn btn-outline-primary" for="coverImageFile">Dosya Yükle</label>
                        </div>

                        <!-- URL Input -->
                        <div id="urlInputContainer">
                            <input type="url" class="form-control" id="coverImage" placeholder="https://example.com/image.jpg" />
                            <div class="form-text">Kapak resmi için bir URL girebilirsiniz.</div>
                        </div>
                        
                        <!-- Hidden input for uploaded file URL -->
                        <input type="hidden" id="coverImageUrl" />

                        <!-- File Input -->
                        <div id="fileInputContainer" style="display: none;">
                            <input type="file" class="form-control" id="coverImageFileInput" accept="image/*" />
                            <div class="form-text">JPG, PNG, GIF veya WEBP formatında, maksimum 5MB.</div>
                            <div id="fileUploadStatus" class="mt-2"></div>
                            <div id="uploadedImagePreview" class="mt-2" style="display: none;">
                                <img id="previewImg" src="" alt="Önizleme" class="img-thumbnail" style="max-width: 300px; max-height: 300px;" />
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <span id="submitSpinner" class="spinner-border spinner-border-sm d-none me-2" role="status" aria-hidden="true"></span>
                            Yazıyı Oluştur
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
// Sayfa yüklendiğinde kategorileri çek
document.addEventListener('DOMContentLoaded', async function() {
    // Kullanıcı giriş kontrolü
    const userStr = localStorage.getItem('user');
    if (!userStr) {
        window.location.href = '/AuthView/Login';
        return;
    }

    // Kategorileri çek
    try {
        const res = await fetch('/api/category');
        if (res.ok) {
            const categories = await res.json();
            const categorySelect = document.getElementById('categoryId');
            
            categories.forEach(category => {
                const option = document.createElement('option');
                option.value = category.id;
                option.textContent = category.name;
                categorySelect.appendChild(option);
            });
        } else {
            showError(document.getElementById('alertContainer'), 'Kategoriler yüklenemedi. Lütfen sayfayı yenileyin.');
        }
    } catch (error) {
        showError(document.getElementById('alertContainer'), 'Kategoriler yüklenirken bir hata oluştu.');
    }

    // Cover image type değiştiğinde
    document.querySelectorAll('input[name="coverImageType"]').forEach(radio => {
        radio.addEventListener('change', function() {
            if (this.value === 'url') {
                document.getElementById('urlInputContainer').style.display = 'block';
                document.getElementById('fileInputContainer').style.display = 'none';
                document.getElementById('coverImage').value = '';
            } else {
                document.getElementById('urlInputContainer').style.display = 'none';
                document.getElementById('fileInputContainer').style.display = 'block';
                document.getElementById('coverImageFileInput').value = '';
                document.getElementById('uploadedImagePreview').style.display = 'none';
            }
        });
    });

    // Dosya yükleme
    document.getElementById('coverImageFileInput').addEventListener('change', async function(e) {
        const file = e.target.files[0];
        if (!file) return;

        const fileInputContainer = document.getElementById('fileInputContainer');
        const statusDiv = document.getElementById('fileUploadStatus');
        const previewDiv = document.getElementById('uploadedImagePreview');
        const previewImg = document.getElementById('previewImg');
        const coverImageInput = document.getElementById('coverImage');

        // Dosya boyutu kontrolü
        if (file.size > 5 * 1024 * 1024) {
            statusDiv.innerHTML = '<div class="alert alert-danger">Dosya boyutu 5MB\'dan büyük olamaz.</div>';
            return;
        }

        statusDiv.innerHTML = '<div class="spinner-border spinner-border-sm me-2"></div>Yükleniyor...';

        try {
            const formData = new FormData();
            formData.append('file', file);

            const response = await fetch('/api/blogpost/upload-image', {
                method: 'POST',
                body: formData
            });

            const data = await response.json();

            if (response.ok) {
                statusDiv.innerHTML = '<div class="alert alert-success">Dosya başarıyla yüklendi!</div>';
                document.getElementById('coverImageUrl').value = data.url; // URL'i hidden input'a kaydet
                
                // Önizleme göster
                previewImg.src = data.url;
                previewDiv.style.display = 'block';
            } else {
                statusDiv.innerHTML = `<div class="alert alert-danger">${data.message || 'Dosya yüklenirken hata oluştu.'}</div>`;
            }
        } catch (error) {
            statusDiv.innerHTML = '<div class="alert alert-danger">Dosya yüklenirken hata oluştu.</div>';
            console.error('Upload error:', error);
        }
    });
});

// Form submit
document.getElementById('createPostForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const form = this;
    const alertContainer = document.getElementById('alertContainer');
    const submitSpinner = document.getElementById('submitSpinner');
    const submitButton = form.querySelector('button[type="submit"]');
    
    // Form validation
    if (!form.checkValidity()) {
        form.classList.add('was-validated');
        return;
    }

    // Kullanıcı bilgisini al
    const userStr = localStorage.getItem('user');
    if (!userStr) {
        showError(alertContainer, 'Oturum süreniz dolmuş. Lütfen tekrar giriş yapın.');
        setTimeout(() => {
            window.location.href = '/AuthView/Login';
        }, 2000);
        return;
    }

    let user;
    try {
        user = JSON.parse(userStr);
    } catch {
        showError(alertContainer, 'Kullanıcı bilgisi okunamadı. Lütfen tekrar giriş yapın.');
        return;
    }

    // Clear previous alerts
    alertContainer.innerHTML = '';
    
    // Show loading state
    submitSpinner.classList.remove('d-none');
    submitButton.disabled = true;

    // Cover image URL'ini al (URL veya yüklenen dosyadan)
    let coverImageUrl = null;
    const coverImageType = document.querySelector('input[name="coverImageType"]:checked').value;
    
    if (coverImageType === 'url') {
        coverImageUrl = document.getElementById('coverImage').value.trim() || null;
    } else {
        // Dosya yüklendiyse URL'i al
        coverImageUrl = document.getElementById('coverImageUrl').value.trim() || null;
    }

    const payload = {
        userId: user.id || user.Id,
        categoryId: parseInt(document.getElementById('categoryId').value),
        title: document.getElementById('title').value.trim(),
        content: document.getElementById('content').value.trim(),
        coverImage: coverImageUrl
    };

    try {
        const res = await fetch('/BlogPost/Create', {
            method: 'POST',
            headers: { 
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(payload)
        });

        const txt = await res.text();

        if (res.ok) {
            try {
                const data = JSON.parse(txt);
                // Başarı mesajı
                alertContainer.innerHTML = `
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Başarılı!</strong> ${data.message || 'Blog yazısı oluşturuldu. Admin onayı bekleniyor.'}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                `;
                
                // Form'u temizle
                form.reset();
                form.classList.remove('was-validated');
                
                // Yazılarım sayfasına yönlendir
                setTimeout(() => {
                    window.location.href = `/BlogPost/MyPosts?userId=${payload.userId}`;
                }, 2000);
            } catch (e) {
                showError(alertContainer, 'Yazı oluşturuldu ancak yanıt işlenemedi.');
            }
        } else {
            // Hata mesajını göster
            try {
                const json = JSON.parse(txt);
                showError(alertContainer, json.message || 'Yazı oluşturulamadı.');
            } catch {
                showError(alertContainer, txt || 'Yazı oluşturulamadı. Lütfen tekrar deneyin.');
            }
        }
    } catch (error) {
        showError(alertContainer, 'Bir hata oluştu. Lütfen tekrar deneyin.');
    } finally {
        submitSpinner.classList.add('d-none');
        submitButton.disabled = false;
    }
});

function showError(container, message) {
    container.innerHTML = `
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Hata!</strong> ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    `;
}
</script>
