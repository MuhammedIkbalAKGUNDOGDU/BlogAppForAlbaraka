@model List<BlogApp.Models.BlogPost>

@{
    ViewData["Title"] = "Gönderilerim";
}

<style>
    .table a:hover {
        color: #0d6efd !important;
        text-decoration: underline !important;
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Gönderilerim</h2>
        <a class="btn btn-success" href="/BlogPost/Create">
            <i class="bi bi-plus-circle"></i> Yeni Yazı Ekle
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            Henüz hiç yazınız bulunmamaktadır. <a href="/BlogPost/Create">İlk yazınızı oluşturun</a>.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>İstatistikler</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var post in Model)
                    {
                        var commentCount = post.Comments?.Count ?? 0;
                        var likeCount = post.Likes?.Count ?? 0;
                        
                        <tr>
                            <td>
                                <strong>
                                    <a href="/BlogPost/Details?id=@post.Id" class="text-decoration-none text-dark" style="cursor: pointer;">
                                        @post.Title
                                    </a>
                                </strong>
                            </td>
                            <td>
                                @if (post.Category != null)
                                {
                                    <span class="badge bg-secondary">@post.Category.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex gap-2 flex-wrap">
                                    <span class="badge bg-info">
                                        <i class="bi bi-eye"></i> @post.ViewCount
                                    </span>
                                    <span class="badge bg-primary">
                                        <i class="bi bi-chat"></i> @commentCount
                                    </span>
                                    <span class="badge bg-danger">
                                        <i class="bi bi-heart"></i> @likeCount
                                    </span>
                                </div>
                            </td>
                            <td>@post.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <div class="d-flex align-items-center gap-2 flex-wrap">
                                    @if (post.IsDraft)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-clock-history"></i> Admin Onayı Bekliyor
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Yayında
                                        </span>
                                    }
                                    <a href="/BlogPost/Edit?id=@post.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Düzenle
                                    </a>
                                    <button class="btn btn-sm btn-outline-danger" onclick="deletePost(@post.Id, '@post.Title.Replace("'", "\\'")')">
                                        <i class="bi bi-trash"></i> Sil
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<script>
let currentUserId = null;

// Sayfa yüklendiğinde userId kontrolü yap
document.addEventListener('DOMContentLoaded', function() {
    const userStr = localStorage.getItem('user');
    if (!userStr) {
        window.location.href = '/AuthView/Login';
        return;
    }

    try {
        const user = JSON.parse(userStr);
        currentUserId = user.id || user.Id;
        const currentUrl = new URL(window.location.href);
        const urlUserId = currentUrl.searchParams.get('userId');

        // Eğer URL'de userId yoksa veya farklıysa, doğru URL'ye yönlendir
        if (!urlUserId || parseInt(urlUserId) !== currentUserId) {
            window.location.href = `/BlogPost/MyPosts?userId=${currentUserId}`;
        }
    } catch (e) {
        console.error('Kullanıcı bilgisi okunamadı:', e);
    }
});

// Yazı silme fonksiyonu
async function deletePost(postId, postTitle) {
    if (!currentUserId) {
        alert('Kullanıcı bilgisi bulunamadı.');
        return;
    }

    // Onay dialog'u
    const confirmed = confirm(`"${postTitle}" başlıklı yazıyı silmek istediğinize emin misiniz?\n\nBu işlem geri alınamaz!`);
    
    if (!confirmed) {
        return;
    }

    try {
        const res = await fetch(`/api/blogpost/${postId}?userId=${currentUserId}`, {
            method: 'DELETE'
        });

        const txt = await res.text();

        if (res.ok) {
            try {
                const data = JSON.parse(txt);
                alert(data.message || 'Yazı başarıyla silindi.');
                // Sayfayı yenile
                window.location.reload();
            } catch (e) {
                alert('Yazı silindi.');
                window.location.reload();
            }
        } else {
            try {
                const json = JSON.parse(txt);
                alert(json.message || 'Yazı silinemedi.');
            } catch {
                alert('Yazı silinemedi. Lütfen tekrar deneyin.');
            }
        }
    } catch (error) {
        console.error('Silme hatası:', error);
        alert('Bir hata oluştu. Lütfen tekrar deneyin.');
    }
}
</script>
