@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-header">
        <h5>Tüm Kullanıcılar</h5>
    </div>
    <div class="card-body">
        <!-- Arama ve Filtreleme -->
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <label for="searchInput" class="form-label">
                    <i class="bi bi-search"></i> Arama (İsim/Email)
                </label>
                <input type="text" class="form-control" id="searchInput" placeholder="İsim veya email ile ara..." />
            </div>
            <div class="col-md-3">
                <label for="roleFilter" class="form-label">
                    <i class="bi bi-person-badge"></i> Rol
                </label>
                <select class="form-select" id="roleFilter">
                    <option value="">Tüm Roller</option>
                    <option value="user">Kullanıcı</option>
                    <option value="admin">Admin</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="statusFilter" class="form-label">
                    <i class="bi bi-funnel"></i> Durum
                </label>
                <select class="form-select" id="statusFilter">
                    <option value="">Tüm Durumlar</option>
                    <option value="0">Aktif</option>
                    <option value="1">Askıya Alınmış</option>
                    <option value="2">Yasaklanmış</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button class="btn btn-outline-secondary w-100" onclick="clearFilters()">
                    <i class="bi bi-x-circle"></i> Temizle
                </button>
            </div>
        </div>

        <div id="alertContainer"></div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th>Durum</th>
                        <th>Yazı Sayısı</th>
                        <th>Kayıt Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody id="usersTableBody">
                    <tr>
                        <td colspan="8" class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Yükleniyor...</span>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
let searchTimeout = null;
let currentSearch = '';
let currentRole = '';
let currentStatus = '';

document.addEventListener('DOMContentLoaded', function() {
    // URL'den status parametresini oku
    const urlParams = new URLSearchParams(window.location.search);
    const statusParam = urlParams.get('status');
    if (statusParam !== null) {
        currentStatus = statusParam;
        document.getElementById('statusFilter').value = statusParam;
    }

    loadUsers();

    // Arama input'u için debounce (500ms bekle)
    document.getElementById('searchInput').addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
            currentSearch = this.value.trim();
            loadUsers();
        }, 500);
    });

    // Filtreler değiştiğinde
    document.getElementById('roleFilter').addEventListener('change', function() {
        currentRole = this.value;
        loadUsers();
    });

    document.getElementById('statusFilter').addEventListener('change', function() {
        currentStatus = this.value;
        loadUsers();
    });
});

async function loadUsers() {
    const tbody = document.getElementById('usersTableBody');
    tbody.innerHTML = `
        <tr>
            <td colspan="8" class="text-center">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Yükleniyor...</span>
                </div>
            </td>
        </tr>
    `;

    try {
        let url = '/api/admin/users?';
        if (currentSearch) {
            url += `search=${encodeURIComponent(currentSearch)}&`;
        }
        if (currentRole) {
            url += `role=${encodeURIComponent(currentRole)}&`;
        }
        if (currentStatus) {
            url += `status=${currentStatus}`;
        }

        const res = await fetch(url);
        
        if (res.ok) {
            const users = await res.json();
            
            if (users.length === 0) {
                let message = 'Kullanıcı bulunamadı.';
                if (currentSearch || currentRole || currentStatus) {
                    message = 'Arama kriterlerinize uygun kullanıcı bulunamadı.';
                }
                tbody.innerHTML = `<tr><td colspan="8" class="text-center text-muted">${message}</td></tr>`;
                return;
            }

            tbody.innerHTML = users.map(user => {
                const statusBadge = getStatusBadge(user.status);
                const statusText = getStatusText(user.status);
                
                return `
                    <tr>
                        <td>${user.id}</td>
                        <td>${escapeHtml(user.firstName)} ${escapeHtml(user.lastName)}</td>
                        <td>${escapeHtml(user.email)}</td>
                        <td><span class="badge bg-${user.role === 'admin' ? 'danger' : 'secondary'}">${user.role}</span></td>
                        <td>${statusBadge}</td>
                        <td>${user.postCount}</td>
                        <td>${new Date(user.createdAt).toLocaleDateString('tr-TR')}</td>
                        <td>
                            <div class="btn-group">
                                <button class="btn btn-sm btn-outline-primary" onclick="updateUserStatus(${user.id}, 0)" ${user.status === 0 ? 'disabled' : ''}>
                                    Aktif
                                </button>
                                <button class="btn btn-sm btn-outline-warning" onclick="updateUserStatus(${user.id}, 1)" ${user.status === 1 ? 'disabled' : ''}>
                                    Askıya Al
                                </button>
                                <button class="btn btn-sm btn-outline-danger" onclick="updateUserStatus(${user.id}, 2)" ${user.status === 2 ? 'disabled' : ''}>
                                    Yasakla
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
            }).join('');
        } else {
            tbody.innerHTML = '<tr><td colspan="8" class="text-center text-danger">Kullanıcılar yüklenemedi.</td></tr>';
        }
    } catch (error) {
        console.error('Hata:', error);
        tbody.innerHTML = '<tr><td colspan="8" class="text-center text-danger">Bir hata oluştu.</td></tr>';
    }
}

function clearFilters() {
    document.getElementById('searchInput').value = '';
    document.getElementById('roleFilter').value = '';
    document.getElementById('statusFilter').value = '';
    currentSearch = '';
    currentRole = '';
    currentStatus = '';
    loadUsers();
}

function getStatusBadge(status) {
    switch(status) {
        case 0: return '<span class="badge bg-success">Aktif</span>';
        case 1: return '<span class="badge bg-warning text-dark">Askıya Alınmış</span>';
        case 2: return '<span class="badge bg-danger">Yasaklanmış</span>';
        default: return '<span class="badge bg-secondary">Bilinmiyor</span>';
    }
}

function getStatusText(status) {
    switch(status) {
        case 0: return 'Aktif';
        case 1: return 'Askıya Alınmış';
        case 2: return 'Yasaklanmış';
        default: return 'Bilinmiyor';
    }
}

async function updateUserStatus(userId, status) {
    if (!confirm('Kullanıcı durumunu değiştirmek istediğinize emin misiniz?')) {
        return;
    }

    try {
        const res = await fetch('/api/admin/update-user-status', {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ userId, status })
        });

        const txt = await res.text();

        if (res.ok) {
            const data = JSON.parse(txt);
            showAlert('success', data.message || 'Kullanıcı durumu güncellendi.');
            loadUsers();
        } else {
            try {
                const json = JSON.parse(txt);
                showAlert('danger', json.message || 'Kullanıcı durumu güncellenemedi.');
            } catch {
                showAlert('danger', 'Kullanıcı durumu güncellenemedi.');
            }
        }
    } catch (error) {
        console.error('Hata:', error);
        showAlert('danger', 'Bir hata oluştu.');
    }
}

function showAlert(type, message) {
    const container = document.getElementById('alertContainer');
    container.innerHTML = `
        <div class="alert alert-${type} alert-dismissible fade show" role="alert">
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    `;
    setTimeout(() => {
        container.innerHTML = '';
    }, 5000);
}

function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}
</script>
